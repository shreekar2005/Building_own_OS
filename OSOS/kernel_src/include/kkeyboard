#ifndef __KKEYBOARD_H
    #define __KKEYBOARD_H
    #include <cstdint>
    #include "kinterrupt"
    #include "kport"
    #include "kdriver"

    //KeyboardEventHandler is an INTREFACE
    class KeyboardEventHandler{
        public:
            KeyboardEventHandler();
            virtual ~KeyboardEventHandler();
            virtual void onKeyDown(char ascii)=0;
            virtual void onKeyUp(char ascii)=0;
    };
    
    class KeyboardDriver : public InterruptHandler, public Driver{
            Port8Bit dataPort;
            Port8Bit commandPort;
            // for shift
            bool shift_pressed;
            // for caps
            bool caps_on;
            bool waiting_for_led_ack;
            uint8_t led_byte_to_send;

            KeyboardEventHandler* keyboardEventHandler;

        public :
            KeyboardDriver(InterruptManager* interrupt_manager, KeyboardEventHandler* keyboardEventHandler);
            ~KeyboardDriver();
            uint32_t handleInterrupt(uint32_t esp) override; // function mainly defined in InterruptHandler class.

            void activate() override;
            int reset() override;
            void deactivate() override;
    };

#endif