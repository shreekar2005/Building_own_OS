#ifndef __KKEYBOARD
    #define __KKEYBOARD
    #include <cstdint>
    #include "kinterrupt"
    #include "kport"

    class KeyboardDriver : public InterruptHandler{
            Port8Bit dataPort;
            Port8Bit commandPort;
        public :
            KeyboardDriver(InterruptManager* interrupt_manager);
            ~KeyboardDriver();
            uint32_t handleInterrupt(uint32_t esp) override; // function mainly defined in InterruptHandler class.
    };

#endif