#ifndef __KMOUSE
    #define __KMOUSE
    #include <cstdint>
    #include "kinterrupt"
    #include "kport"
    #include "kiostream"

    class MouseDriver : public InterruptHandler{
            Port8Bit dataPort;
            Port8Bit commandPort;
            int8_t buffer[3];
            uint8_t offset;
            uint8_t buttons;
            
        public :
            static uint16_t old_char_under_cursor;
            static int8_t __mouse_x_, __mouse_y_;
            MouseDriver(InterruptManager* interrupt_manager);
            ~MouseDriver();
            uint32_t handleInterrupt(uint32_t esp) override; // function mainly defined in InterruptHandler class.
    };

#endif