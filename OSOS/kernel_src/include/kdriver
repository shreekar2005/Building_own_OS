#ifndef __KDRIVER_H
    #define __KDRIVER_H
    #define MAX_NUMDRIVERS 265
    class Driver{ //making driver an INTERFACE
        private:
            
        public:
            Driver();
            virtual ~Driver();
            virtual void activate()=0;
            virtual int reset()=0;
            virtual void deactivate()=0;
    };

    class DriverManager{
        private:
            Driver* drivers[MAX_NUMDRIVERS];
            int numDrivers;
        public:
            DriverManager();
            ~DriverManager();
            void addDriver(Driver*);
            void activateAll();
    };

#endif